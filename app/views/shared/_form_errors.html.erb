<% if model.errors.any? %>
  <div class="<%= "#{model.model_name.singular}-form-errors-#{model.id.present? ? model.id : "new-#{model.model_name.singular}"}" %> mb-4 rounded-lg border border-red-300 bg-red-100 text-red-800 px-4 py-3 text-sm">
    <h2 class="font-semibold mb-2">
      <%= pluralize(model.errors.count, "error") %> prevented this <%= model.model_name.singular %> from being saved:
    </h2>
    <ul class="list-disc list-inside">
      <% model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
