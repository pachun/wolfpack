<div class="game-details-<%= game.id %> mt-6 flex flex-col items-center gap-4">
  <!-- Responsive scoreboard layout -->
  <div class="grid grid-cols-1 sm:grid-cols-3 w-full max-w-xs sm:max-w-xl text-center gap-4">
    <!-- Away -->
    <div class="away-team">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100 whitespace-nowrap">
        <%= game.away_team %>
      </h1>
      <div class="text-sm text-gray-500 dark:text-gray-400">Away</div>
      <div class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100">
        <%= game.away_score %>
      </div>
    </div>

    <!-- @ symbol -->
    <div class="flex flex-col items-center justify-center">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-600 dark:text-gray-300">@</h1>
    </div>

    <!-- Home -->
    <div class="home-team">
      <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100 whitespace-nowrap">
        <%= game.home_team %>
      </h1>
      <div class="text-sm text-gray-500 dark:text-gray-400">Home</div>
      <div class="text-4xl sm:text-5xl font-bold text-gray-900 dark:text-gray-100">
        <%= game.home_score %>
      </div>
    </div>
  </div>

  <!-- Date/Time -->
  <div class="text-center text-sm sm:text-base text-gray-600 dark:text-gray-400">
    <%= local_relative_time(game.scheduled_at, type: "weekday-or-date") %>
    @
    <%= local_time(game.scheduled_at, format: "%-I:%M %p") %>
  </div>

  <!-- Rink -->
  <div class="text-center text-sm sm:text-base text-gray-600 dark:text-gray-400">
    Rink <span class="font-medium text-gray-800 dark:text-gray-200"><%= game.rink %></span>
  </div>

  <%= link_to "Edit", edit_game_path(game), class: "inline-block px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition" %>

  <%= button_to "Delete", game_path(game),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this game?" },
      class: "inline-block px-4 py-2 text-sm font-medium text-white bg-red-600 rounded hover:bg-red-700 transition" %>
</div>
